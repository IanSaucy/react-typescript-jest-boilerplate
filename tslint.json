{
  "defaultSeverity": "error",
  "linterOptions": {
      "project": "./tsconfig.json",
      "exclude": [
        "./webpack.config.js",
        "./test-coverage/**"
      ]
  },
  "extends": [
      "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "indent": [true, "spaces", 2]
  },
  "rulesDirectory": []
}