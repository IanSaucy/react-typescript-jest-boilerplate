{
  "name": "react-typescript-jest-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate for React app with Typescript and Jest lib",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --mode development --open --hot --config ./webpack.config.js",
    "build": "webpack --mode production --config ./webpack.config.js",
    "lint": "npm run lint:code && npm run lint:style",
    "lint:code": "tslint --project ./tsconfig.json",
    "lint:style": "stylelint src/**/*.scss",
    "test": "jest --config=jest.config.js",
    "test:watch": "jest --config=jest.config.js --watch",
    "test:coverage": "jest --config=jest.config.js --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rkoziol/react-typescript-jest-boilerplate.git"
  },
  "keywords": [
    "react",
    "typescript",
    "javascript",
    "jest",
    "boilerplate",
    "rkoziol"
  ],
  "author": "rkoziol",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rkoziol/react-typescript-jest-boilerplate/issues"
  },
  "homepage": "https://github.com/rkoziol/react-typescript-jest-boilerplate#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/react-router-dom": "^5.1.5",
    "@types/react-test-renderer": "^16.9.2",
    "css-loader": "^3.5.3",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.0.1",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "react-test-renderer": "^16.13.1",
    "sass-loader": "^8.0.2",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.2.1",
    "stylelint": "^13.3.3",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "ts-jest": "^25.4.0",
    "ts-loader": "^7.0.2",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2"
  }
}
